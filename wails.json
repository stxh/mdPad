{
  "$schema": "https://wails.io/schemas/config.v2.json",
  "name": "mdPad",
  "outputfilename": "mdPad",
  "frontend:install": "bun install",
  "frontend:build": "bun run build",
  "frontend:dev:watcher": "bun run dev",
  "frontend:dev:serverUrl": "auto",
  "author": {
    "name": "StXh",
    "email": "stxh007@gmail.com"
  },
  "info": {
    "fileAssociations": [
    {
        "ext": "md",
        "name": "MarkDown",
        "description": "MarkDown File",
        "iconName": "mdFileIcon",
        "role": "Editor"
      }
    ],
    "protocols": [
      {
        "scheme": "mdpad",
        "description": "mdpad protocol",
        "role": "Editor"
      }
    ]
  }
}
